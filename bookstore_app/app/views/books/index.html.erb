<p id="notice"><%= notice %></p>

<h1>值乎图书商城</h1>

<div>
  <div>
    <%= form_tag search_books_path , method: :get do %>

<!--      <input type="text"   class = ""-->
<!--        placeholder="请输入书籍关键词"  name="title" />-->
<!--      <button type="submit"  style="height: 60px; color: #B00100">搜索</button>-->

      <input type="text" class="form-control" placeholder="请输入书籍关键字" name="title"/>

        <button class="btn btn-info btn-search">查找</button>


    <% end %>
  </div>
</div>
<table class = "table table-bordered table-hover">


  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Author</th>
      <th>Publish</th>
      <th>Time</th>
<!--      <th>Path</th>-->
<!--      <th>Piclocation</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td width="30%"><%= book.title %></td>
        <td><%= book.price %></td>
        <td><%= book.author %></td>
        <td><%= book.publish %></td>
        <td><%= book.time %></td>


        <td><%= image_tag book.picLocation %></td>
        <td><%= link_to 'Show', book %></td>
<!--        <td><%#= link_to 'Edit', edit_book_path(book) %></td>-->
<!--        <td><%#= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
<%= will_paginate @books %>